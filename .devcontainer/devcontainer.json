{
  "name": "Pickey-Car ROS2 Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [ 
    "--env", "DISPLAY=:0",
    "--network", "host",
    "--gpus", "all",
    "-e", "XDG_RUNTIME_DIR=/tmp/runtime-root",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
    "-e", "NVIDIA_DRIVER_CAPABILITIES=all",
    "-e", "NVIDIA_VISIBLE_DEVICES=all"
  ],
  "workspaceFolder": "/root/p00ickey-car",
  "workspaceMount": "source=${localWorkspaceFolder},target=/root/p00ickey-car,type=bind,consistency=cached",
  "customizations": {
    "vscode": {
        "extensions": [
          "ms-iot.vscode-ros",
          "ms-python.python",
          "ms-vscode.cpptools",
          "ms-vscode.cmake-tools",
          "ms-python.vscode-pylance",
          "foxundermoon.shell-format",
          "tkrkt.ros-snippets",
          "bbenoist.nunjucks",
          "eamodio.gitlens",
          "streetsidesoftware.code-spell-checker",
          "redhat.vscode-yaml",
          "oderwat.indent-rainbow",
          "ms-azuretools.vscode-docker",
          "GitHub.copilot",
          "GitHub.copilot-chat"
        ]

    }
  },
  "postStartCommand": ".devcontainer/ros_entrypoint.sh"

}